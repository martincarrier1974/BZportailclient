// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPER_ADMIN
  TENANT_ADMIN
  READ_ONLY
}

enum PBXStatus {
  CONNECTED
  DISCONNECTED
  ERROR
}

enum PBXApiType {
  REST
  AMI
  UCP
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  READ
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // hashed with bcrypt
  firstName String?
  lastName  String?
  role      UserRole @default(READ_ONLY)
  tenantId  String?  // null for SUPER_ADMIN
  tenant    Tenant?  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  auditLogs AuditLog[]

  @@index([email])
  @@index([tenantId])
}

model Tenant {
  id          String   @id @default(uuid())
  name        String
  companyName String
  contactEmail String?
  contactPhone String?
  address     String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users          User[]
  pbxInstances   FreePBXInstance[]
  auditLogs      AuditLog[]

  @@index([name])
}

model FreePBXInstance {
  id              String      @id @default(uuid())
  tenantId        String
  tenant          Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  name            String
  host            String      // IP or FQDN
  port            Int?        @default(443)
  apiType         PBXApiType @default(REST)
  apiUrl          String?     // Full API URL if REST/UCP
  apiKey          String?     // Encrypted API key/token
  username        String?     // For AMI
  password        String?     // Encrypted password
  status          PBXStatus  @default(DISCONNECTED)
  lastHealthCheck DateTime?
  notes           String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  auditLogs AuditLog[]

  @@index([tenantId])
  @@index([status])
}

model AuditLog {
  id            String      @id @default(uuid())
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  tenantId      String?
  tenant        Tenant?     @relation(fields: [tenantId], references: [id])
  pbxInstanceId String?
  pbxInstance   FreePBXInstance? @relation(fields: [pbxInstanceId], references: [id])
  action        AuditAction
  entityType    String      // e.g., "IVR", "ROUTE", "USER"
  entityId      String?
  changes       Json?       // { before: {...}, after: {...} }
  ipAddress     String?
  userAgent     String?
  createdAt     DateTime    @default(now())

  @@index([userId])
  @@index([tenantId])
  @@index([pbxInstanceId])
  @@index([createdAt])
  @@index([entityType, entityId])
}

